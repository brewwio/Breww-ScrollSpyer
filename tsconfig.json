{
  "compilerOptions": {
    "typeRoots": ["@types", "./node_modules/@types"],
    "module": "esnext",
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true
  },
  
  "include": ["src/**/*.ts"],
  "exclude": ["test/**/*"]
}
